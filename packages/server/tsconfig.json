{
	"compilerOptions": {
		"strictNullChecks": true,
		"target": "esnext",
		"module": "esnext",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"baseUrl": "src",
		"paths": {
			"app/*": ["./*"],
			"controllers/*": ["controllers/*"],
			"services/*": ["services/*"],
			"routes/*": ["routes/*"],
			"db/*": ["db/*"]
		}
	}
}
